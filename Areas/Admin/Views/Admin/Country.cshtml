
@model IEnumerable<BloodBankManagementSystem.Models.Country>

@{
    ViewBag.Title = "Country";
    Layout = "~/Views/Shared/_AdminLayoutPage1.cshtml";
}


<h2 class="jumbotron text-center">Country</h2>

<p>
    @Html.ActionLink("Create New", "CreateC")
</p>
<table class="table table-bordered alert-info">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.countryname)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.countryname)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditC", new { id = item.countryid }) |

                @Html.ActionLink("Delete", "DeleteC", new { id = item.countryid })
            </td>
        </tr>
    }

</table>
