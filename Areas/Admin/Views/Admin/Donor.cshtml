
@model IEnumerable<BloodBankManagementSystem.Models.Donor>

@{
    ViewBag.Title = "Donor";
    Layout = "~/Views/Shared/_AdminLayoutPage1.cshtml";

}

<link href="~/Content/bootstrap.css" rel="stylesheet" />


<h2>@TempData["UpdatetMessage"]</h2>
<h2>@TempData["DeleteMessage"]</h2>

<h2 class="jumbotron text-center">Donor List</h2>

<table class="table table-bordered alert-info">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fullname)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.gender)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.bloodgroup)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.phoneno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.panno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.lastdonationdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.countryname)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.statename)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.cityname)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fullname)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.gender)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.bloodgroup)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.phoneno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.panno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.lastdonationdate)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.countryname)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.statename)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.cityname)
            </td>

        </tr>
    }

</table>
